{
    "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
    "metadata": [
        {
            "src": [
                {
                    "src": "../",
                    "files": [ "**/*.csproj" ]
                }
            ],
            "dest": "api",
            "filter": "filterConfig.yml"
        }
    ],
    "build": {
        "content": [
            {
                "files": [ "**/*.md", "**/*.yml" ],
                "exclude": [ "_site/**" ]
            }
        ],
        "resource": [
            {
                "files": [ "images/**" ]
            }
        ],
        "output": "_site",
        "template": [ "default", "modern" ],
        "globalMetadata": {
            "_appName": "gsbMonolith",
            "_appTitle": "gsbMonolith",
            "_enableSearch": false,
            "_appHome": "index.md",
            "pdf": true
        }
    }
}